    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <title>Result - English in the family | Login</title>
</head>
<body>

    <div class="navbar row">
        <div class="col-md-6 navbar__col" id="logo">
            <a href="/"><img class="navbar__logo" src="/images/logo.png" alt=""></a>
        </div>
        <div class="col-md-2 navbar__col" id="cadastro">
            <a href="/cadastro" class="navbar__link">REGISTER</a>
        </div>
        <div class="col-md-2 navbar__col" id="login">
            <a href="/login" class="navbar__link">LOGIN</a>
        </div>

        <div class="col-3 col-md-0" id="space"></div>

        <div class="col-3 navbar__col" id="mobile">

            <nav>
                <input type="checkbox" id="hamburger1" />
                <label class="label" for="hamburger1"></label>
            </nav>

        </div>
        <div class="col-md-2 col-6 navbar__col">
            <div class="dropdown">
                <img src="/images/pt.png" alt="">
            </div>
        </div>
    </div>

    <div class="mobile__menu">
        <a class="mobile__menu__link" href="/cadastro">CADASTRO</a>
        <a class="mobile__menu__link" href="/login">LOGIN</a>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>

            <div class="col-md-4">

                <div class="menu" role="menu">
                    <form action="/redefinir" method="post">

                        <h1 class="menu__title">Redefinir senha</h1>

                        <h3 class="menu__msg">{{emailnotfound}}</h3>

                        <label class="menu__label" for="email"><b>Email cadastrado</b></label>
                        <input class="menu__input" type="email" placeholder="Insira seu email" name="email" id="email" aria-required="true" required>


                        <button role="button" class="menu__button" type="submit">Enviar</button>

                    </form>
                </div>

            </div>
            <div class="col-md-4"></div>
        </div>
    </div>

    <!--Bootstrap-->

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
